<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/style') %>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center align-content-center py-4">
            <h1>Listado Productos</h1>
        </div>
        <div class="row justify-content-center align-content-center py-4 header-table">
            <div class="col-2">#</div>
            <div class="col-4">Nombre</div>
            <div class="col-4">Precio</div>
            <div class="col">Imagen</div>
        </div>
        <% if (message) { %>
            <div class="row justify-content-center align-content-center py-2 rows-table">
                <h3 class="text-center">
                    <%= message %>
                </h3>
            </div>
        <%  }else{ %>
            <% productos.forEach((e, i)=> { %>
                <div class="row justify-content-center align-content-center py-2 rows-table">
                    <div class="col-2 d-flex align-items-center ">
                        <%=e.id%>
                    </div>
                    <div class="col-4 d-flex align-items-center ">
                        <%=e.title%>
                    </div>
                    <div class="col-4 d-flex align-items-center ">
                        $ <%=e.price%>
                    </div>
                    <div class="col text-center">
                        <img src="/<%=e.thumbnail %>" height="50" width="50"> 
                    </div>
                </div>
            <% }) %>
        <%}%>


        <a href="/">Agregar Producto</a>
    </div>
</body>

</html>